{
  "readme": "This config tests the removeNodeText scriptlet",
  "version": 1,
  "unprotectedTemporary": [],
  "features": {
    "scriptlets": {
      "exceptions": [],
      "state": "enabled",
      "settings": {
        "scriptlets": [],
        "conditionalChanges": [
          {
            "condition": [
              {
                "domain": "localhost"
              },
              {
                "domain": "privacy-test-pages.site"
              }
            ],
            "patchSettings": [
              {
                "op": "add",
                "path": "/scriptlets/-",
                "value": {
                  "name": "removeNodeText",
                  "attrs": {
                    "nodeName": "div",
                    "textMatch": "badTextContent"
                  }
                }
              }
            ]
          }
        ]
      }
    }
  }
} 
