{
  "unprotectedTemporary": [],
  "features": {
    "scriptlets": {
      "exceptions": [],
      "state": "enabled",
      "settings": {
        "scriptlets": [],
        "conditionalChanges": [
          {
            "condition": {
              "domain": ["localhost", "privacy-test-pages.site"]
            },
            "patchSettings": [
              {
                "op": "add",
                "path": "/scriptlets/-",
                "value": {
                  "name": "removeNodeText",
                  "attrs": {
                    "nodeName": "script",
                    "textMatch": "badScriptContent"
                  },
                  "source": "adguard"
                }
              }
            ]
          }
        ]
      }
    }
  }
} 