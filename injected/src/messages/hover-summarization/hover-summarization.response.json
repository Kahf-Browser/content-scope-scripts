{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "name": "HoverSummarizationResponse",
    "required": ["data"],
    "properties": {
      "data": {
        "type": "object",
        "properties": {
            "title": {
                "type": "string",
                "description": "The title of the page being summarized."
            },
            "favicon": {
                "type": "string",
                "description": "The URL of the favicon for the page."
            },
            "summary": {
                "type": "string",
                "description": "A brief summary of the page content."
            },
            "error": {
                "type": ["null", "string"],
                "description": "An error message if the summarization failed, otherwise null."
            }
        }
      }
    }
}
