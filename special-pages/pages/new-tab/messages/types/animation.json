{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Animation",
  "description": "Generic Animation configuration",
  "oneOf": [
    {
      "title": "None",
      "type": "object",
      "required": ["kind"],
      "properties": {
        "kind": {
          "const": "none"
        }
      }
    },
    {
      "title": "View Transitions",
      "description": "Use CSS view transitions where available",
      "type": "object",
      "required": ["kind"],
      "properties": {
        "kind": {
          "const": "view-transitions"
        }
      }
    }
  ]
}
